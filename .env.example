# Issuer Private Key (for API)
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
ISSUER_PRIVATE_KEY=

# Polygon Amoy Testnet RPC URL
# Get a free key from Alchemy or Infura
POLYGON_AMOY_RPC_URL=https://rpc-amoy.polygon.technology

# Polygon Mainnet RPC URL
POLYGON_MAINNET_RPC_URL=https://polygon-rpc.com

# Polygonscan API Key (for contract verification)
POLYGONSCAN_API_KEY=

# Deployer Private Key (for contract deployment)
# NEVER commit this! Use a dedicated deployment wallet.
DEPLOYER_PRIVATE_KEY=

# Deployed Contract Addresses (fill after deployment)
REVOCATION_REGISTRY_ADDRESS=

# API Configuration
PORT=3000
NODE_ENV=development

# GitHub OAuth (for Web2 Bridge)
# Register app at: https://github.com/settings/developers
GITHUB_CLIENT_ID=
GITHUB_CLIENT_SECRET=
GITHUB_CALLBACK_URL=http://localhost:3000/auth/github/callback

# Issuer DID
ISSUER_DID=

# JWT Secret (for API keys)
# Generate with: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=

# Allowed CORS origins
ALLOWED_ORIGINS=http://localhost:3001,veritas://
